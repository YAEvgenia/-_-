@model IEnumerable<CadastreManagment.StatementRealEstate>

@{
    ViewBag.Title = "Index";
}

<h2 class="zagolovok">Заявления на кадастр недвижимости</h2>

<p>
    @Html.ActionLink("Создать новое", "Create", null, new { @class = "edit" })
</p>
<table class="table">
    <tr>
        <th>
            Статус заявления
        </th>
        <th>
            Тип недвижимости
        </th>
        <th>
            Площадь
        </th>
        <th>
            Адрес
        </th>
        <th>
            Паспортные данные владельца
        </th>
        <th>
            Готовность объекта
        </th>
        <th>
            Назначение объекта
        </th>
        <th>
            Этажность
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Readiness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floors)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "edit" }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }, new { @class = "details" }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "delete" })|
                @Html.ActionLink("Одобрить", "CreateRealEstate", new { id = item.Id }, new { @class = "details" }) |
                @Html.ActionLink("Отказать", "RefuseRealEstate", new { id = item.Id }, new { @class = "delete" })
            </td>
        </tr>
    }

</table>
