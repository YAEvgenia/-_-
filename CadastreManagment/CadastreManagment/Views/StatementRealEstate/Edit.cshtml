@model CadastreManagment.StatementRealEstate

@{
    ViewBag.Title = "Edit";
}

<h2 class="zagolovok">Изменить</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div >

        <hr />
        @Html.ValidationSummary(true, "")
        @Html.HiddenFor(model => model.Id)

        <div >
            Статус заявления:
            <div >
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status, "")
            </div>
        </div>

        <div>
            Тип недвижимости:
            <div >
                @Html.EditorFor(model => model.Type)
                @Html.ValidationMessageFor(model => model.Type, "")
            </div>
        </div>

        <div >
            Площадь:
            <div >
                @Html.EditorFor(model => model.Area)
                @Html.ValidationMessageFor(model => model.Area, "")
            </div>
        </div>

        <div >
            Адрес:
            <div >
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address, "")
            </div>
        </div>

        <div >
            Паспортные данные владельца:
            <div >
                @Html.EditorFor(model => model.Passport)
                @Html.ValidationMessageFor(model => model.Passport, "")
            </div>
        </div>

        <div >
            Готовность объекта:
            <div >
                @Html.EditorFor(model => model.Readiness )
