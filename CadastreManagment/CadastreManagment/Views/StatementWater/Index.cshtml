@model IEnumerable<CadastreManagment.StatementWater>

@{
    ViewBag.Title = "Index";
}

<h2 class="zagolovok">Заявления на водный кадастр</h2>

<p>
    @Html.ActionLink("Создать новое", "Create", null, new { @class = "edit" })
</p>
<table class="table">
    <tr>
        <th>
            Статус заявления
        </th>
        <th>
            Площадь
        </th>
        <th>
            Адрес
        </th>
        <th>
            Тип объекта
        </th>
        <th>
            Паспортные данные владельца
        </th>
        <th>
            Уровень загрязненности
        </th>
        <th>
            Очистительные станции
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Water_quality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Water_management_facilities)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "edit" }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }, new { @class = "details" }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "delete" })|
                @Html.ActionLink("Одобрить", "CreateWater", new { id = item.Id }, new { @class = "details" }) |
                @Html.ActionLink("Отказать", "RefusalWater", new { id = item.Id }, new { @class = "delete" })
            </td>
        </tr>
    }

</table>
