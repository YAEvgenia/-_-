@model CadastreManagment.WaterCadastre

@{
    ViewBag.Title = "Edit";
}

<h2 class="zagolovok">Изменить</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div >

        <hr />
        @Html.ValidationSummary(true, "")
        @Html.HiddenFor(model => model.Id)

        <div>
            Площадь:
            <div >
                @Html.EditorFor(model => model.Area)
                @Html.ValidationMessageFor(model => model.Area, "")
            </div>
        </div>

        <div >
            Адрес:
            <div >
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address, "")
            </div>
        </div>

        <div >
            Тип водного объекта:
            <div >
                @Html.EditorFor(model => model.Type)
                @Html.ValidationMessageFor(model => model.Type, "")
            </div>
        </div>

        <div>
            Дата регистрации:
            <div >
                @Html.EditorFor(model => model.Approval_date)
                @Html.ValidationMessageFor(model => model.Approval_date, "")
            </div>
        </div>

        <div >
            Паспортные данные владельца:
            <div >
                @Html.EditorFor(model => model.Passport)
                @Html.ValidationMessageFor(model => model.Passport, "")
            </div>
        </div>

        <div >
            Налоговый коэффициент:
            <div >
                @Html.EditorFor(model => model.Tax_coefficint)
                @Html.ValidationMessageFor(model => model.Tax_coefficint, "")
            </div>
        </div>

        <div >
            Уровень загрязненности:
            <div >
                @Html.EditorFor(model => model.Water_quality)
                @Html.ValidationMessageFor(model => model.Water_quality, "")
            </div>
        </div>

        <div>
            Очистительные станции:
            <div >
                @Html.EditorFor(model => model.Water_management_facilities)
                @Html.ValidationMessageFor(model => model.Water_management_facilities, "")
            </div>
        </div>

        <div >
            <div>
                <br />
                <input type="submit" value="Сохранить" />
                @Html.ActionLink("Вернуться к списку", "Index", null, new { @class = "details" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
